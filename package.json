{
  "name": "n8n-nodes-airtable-advanced",
  "version": "1.0.0",
  "description": "Advanced Airtable integration node for n8n with formula support",
  "license": "BUSL-1.1",
  "homepage": "https://github.com/n8n-nodes/airtable-advanced",
  "author": {
    "name": "n8n Community",
    "email": "community@n8n.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n8n-nodes/airtable-advanced.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/AirtableApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Airtable/Airtable.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "typescript": "^5.0.4",
    "@typescript-eslint/parser": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "keywords": [
    "n8n-community-node-package",
    "airtable",
    "database",
    "spreadsheet",
    "api"
  ]
}
